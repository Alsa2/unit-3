ScreenManager:
    id:src_manager

    IntroScreen:
        name: "IntroScreen"

    PrepareDoughtScreen:
        name: "PrepareDoughtScreen"

    AddingTomatoScreen:
        name: "AddingTomatoScreen"

    AddingCheeseScreen:
        name: "AddingCheeseScreen"

    AddingToppingsScreen:
        name: "AddingToppingsScreen"

    FurnaceScreen:
        name: "FurnaceScreen"

    PizzaReadyScreen:
        name: "PizzaReadyScreen"
    

<IntroScreen>:

    MDCard:

        size_hint: .8, .8
        pos_hint: {"center_x": .5, "center_y": .5}
        md_bg_color: 0.5, 0.5, 0.5, 1
        orientation: "vertical"
        padding: "8dp"

        MDLabel:
            text: "Welcome to the Pizza Maker App"
            halign: "center"
            font_style: "H2"

        MDRaisedButton:
            text: "Start"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: app.root.current = app.on_start()
            on_release: app.root.current = "PrepareDoughtScreen"

        FitImage:
            source: "assets/pizza.jpg"
            size_hint: 1, 1
            allow_stretch: True
            radius: [25,]



<PrepareDoughtScreen>:
    MDCard:

        size_hint: .8, .8
        pos_hint: {"center_x": .5, "center_y": .5}
        md_bg_color: 0.5, 0.5, 0.5, 1
        orientation: "vertical"
        padding: "8dp"

        MDLabel:
            text: "Prepare the dought"
            halign: "center"
            font_style: "H2"

        FitImage:
            source: "assets/dough.jpg"
            size_hint: 1, 1
            allow_stretch: True
            radius: [25,]
        
        MDLabel:
            text: "Not the nan pizza"
            halign: "center"
            font_style: "H4"

        MDBoxLayout:
            orientation: "horizontal"
            padding: "8dp"

            MDRaisedButton:
                text: "Back"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: app.root.current = "IntroScreen"

            MDRaisedButton:
                text: "Next"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: app.root.current = "AddingTomatoScreen"

