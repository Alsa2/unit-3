MDScreen:
    size:500,500
    MDBoxLayout:
        id: main_screen
        orientation:"vertical"
        
        MDLabel:
            text:"Tic Tac Toe by Bob"
            halign:"center"
            theme_text_color:"Custom"
            text_color:0,0,0,1
            font_style:"H4"
            size_hint_y:None
            height:dp(50)
